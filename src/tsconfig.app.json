{
  "extends": "@tsconfig/node16/tsconfig.json",

    "compilerOptions": {

      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
      "types": [ "node", "webpack-env" ],
      "typeRoots": [ "../node_modules/@types" ],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "files": ["app.tsx"],

    "include" : ["src/**/*"]

  }